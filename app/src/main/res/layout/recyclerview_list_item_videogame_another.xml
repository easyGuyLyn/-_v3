<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/game_icon_iv"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/game_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/game_icon_iv"
        android:text="凯恩地狱狱"
        android:textColor="@color/theme_text_color_gray_333333"
        android:textSize="@dimen/text_14_sp" />

    <TextView
        android:id="@+id/game_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_name_tv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/game_icon_iv"
        android:text="老虎机"
        android:textColor="@color/theme_text_color_gray_666666"
        android:textSize="@dimen/text_10_sp" />

    <TextView
        android:id="@+id/game_api_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/game_icon_iv"
        android:text="api"
        android:textColor="@color/theme_text_color_gray_666666"
        android:textSize="@dimen/text_12_sp" />

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/play" />

</RelativeLayout>
