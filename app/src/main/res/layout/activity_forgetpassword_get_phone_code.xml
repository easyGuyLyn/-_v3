<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/theme_bgColor">
    <com.dawoo.gamebox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/code_aleady_send"
            android:textSize="14sp"
            android:textColor="@color/record_entry_hint"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="@color/colorSub"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="点击获取验证码"/>
        <EditText
            android:id="@+id/et_enter_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/captcha_hint"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:digits="@string/input_pasword_num_zm"
            android:layout_toLeftOf="@+id/tv_btn_code"/>


    </RelativeLayout>

    <Button
        android:id="@+id/bt_next"
        android:text="@string/next"
        android:textColor="@color/white"
        android:layout_width="352dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/frame_fillet_blue"/>

</LinearLayout>