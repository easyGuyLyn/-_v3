<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource"
    android:background="@color/bgColor"
    android:gravity="center_horizontal">
    <com.dawoo.gamebox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_gray_666666"
                android:text="@string/new_pwd"/>
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:hint="@string/please_6_20_inpout"
                android:digits="@string/input_pasword_num_zm"
                android:textColor="@color/text_color_gray_999999"
                android:layout_toRightOf="@+id/tv_password"
                android:gravity="right"
                android:padding="@dimen/dp_10"
                android:inputType="textPassword"

                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_makesure_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_gray_666666"
                android:text="@string/confrim_pwd"/>
            <EditText
                android:id="@+id/et_makesure_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:hint="@string/please_commit_password"
                android:textColor="@color/text_color_gray_999999"
                android:digits="@string/input_pasword_num_zm"
                android:layout_toRightOf="@+id/tv_makesure_password"
                android:gravity="right"
                android:padding="@dimen/dp_10"
                android:inputType="textPassword"
                />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/frame_fillet_blue"
        android:text="@string/modify"
        android:textColor="@color/colorTitle"
        android:textSize="16sp" />


</LinearLayout>